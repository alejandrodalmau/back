<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>modificar novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <input type="text" placeholder="titulo" value="{{novedad.id}}" class="form-control" name="titulo">

                </div>
                <div class="form-group">
                    <textarea placeholder="subtitulo" class="form-control"
                        name="subtitulo">{{novedad.subtitulo}}</textarea>

                </div>
                <div class="form-group">
                    <textarea placeholder="novedad" class="form-control" name="novedad">{{novedad.novedad}}</textarea>

                </div>
                <button type="submit" class="btn btn-primary">modificar</button>
            </form>
            {{#if error}}
            <h5>{{ message}}</h5>
            {{/if}}
        </div>
    </div>
</div>